# üîê WeSplit Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# üî• FIREBASE CONFIGURATION (REQUIRED)
# =============================================================================

# Firebase API Key (from Firebase Console > Project Settings > General)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain (from Firebase Console > Authentication > Settings)
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com

# Firebase Project ID (from Firebase Console > Project Settings > General)
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# Firebase Storage Bucket (from Firebase Console > Storage)
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Firebase Messaging Sender ID (from Firebase Console > Project Settings > Cloud Messaging)
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# Firebase App ID (from Firebase Console > Project Settings > General)
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# =============================================================================
# üí∞ MOONPAY INTEGRATION (OPTIONAL)
# =============================================================================

# MoonPay API Key (from MoonPay Dashboard)
EXPO_PUBLIC_MOONPAY_API_KEY=your_moonpay_api_key_here

# MoonPay Secret Key (from MoonPay Dashboard)
EXPO_PUBLIC_MOONPAY_SECRET_KEY=your_moonpay_secret_key_here

# MoonPay Webhook Secret (from MoonPay Dashboard)
EXPO_PUBLIC_MOONPAY_WEBHOOK_SECRET=your_moonpay_webhook_secret_here

# =============================================================================
# üê¶ TWITTER OAUTH (OPTIONAL)
# =============================================================================

# Twitter API Key (from Twitter Developer Portal)
EXPO_PUBLIC_TWITTER_API_KEY=your_twitter_api_key_here

# Twitter API Secret (from Twitter Developer Portal)
EXPO_PUBLIC_TWITTER_API_SECRET=your_twitter_api_secret_here

# Twitter Client ID (from Twitter Developer Portal)
EXPO_PUBLIC_TWITTER_CLIENT_ID=your_twitter_client_id_here

# Twitter Client Secret (from Twitter Developer Portal)
EXPO_PUBLIC_TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# =============================================================================
# üîß DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================

# Development Mode (true/false)
NODE_ENV=development

# Debug Mode (true/false)
EXPO_PUBLIC_DEBUG_MODE=false

# Log Level (debug, info, warn, error)
EXPO_PUBLIC_LOG_LEVEL=info

# =============================================================================
# üì± APP CONFIGURATION (OPTIONAL)
# =============================================================================

# App Name
EXPO_PUBLIC_APP_NAME=WeSplit

# App Version
EXPO_PUBLIC_APP_VERSION=1.0.0

# App Bundle ID
EXPO_PUBLIC_APP_BUNDLE_ID=com.wesplit.app

# =============================================================================
# ‚õìÔ∏è BLOCKCHAIN CONFIGURATION (OPTIONAL)
# =============================================================================

# Solana Network (devnet, testnet, mainnet-beta)
EXPO_PUBLIC_SOLANA_NETWORK=devnet

# Solana RPC URL (optional, uses default if not set)
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# =============================================================================
# üîí SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Encryption Key (auto-generated if not set)
EXPO_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# Session Timeout (in minutes)
EXPO_PUBLIC_SESSION_TIMEOUT=30

# Max Login Attempts
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# üìä ANALYTICS (OPTIONAL)
# =============================================================================

# Analytics Enabled (true/false)
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# Crash Reporting Enabled (true/false)
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=true

# =============================================================================
# üöÄ DEPLOYMENT SETTINGS (OPTIONAL)
# =============================================================================

# Build Number (auto-incremented by EAS)
EXPO_PUBLIC_BUILD_NUMBER=1

# Build Date (auto-set during build)
EXPO_PUBLIC_BUILD_DATE=2024-01-01

# =============================================================================
# üìù NOTES
# =============================================================================

# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Monitor your API usage to prevent abuse
# 5. Set up proper Firebase Security Rules
# 6. Enable Firebase Authentication methods you need
# 7. Configure Firebase Storage rules for file uploads
# 8. Set up Firebase Cloud Functions for backend logic
# 9. Configure Firebase Analytics for user insights
# 10. Set up Firebase Crashlytics for error tracking

# =============================================================================
# üîç GETTING YOUR FIREBASE CONFIG
# =============================================================================

# 1. Go to Firebase Console (https://console.firebase.google.com)
# 2. Create a new project or select existing one
# 3. Go to Project Settings > General
# 4. Scroll down to "Your apps" section
# 5. Click "Add app" and choose "Web"
# 6. Register your app and copy the config values
# 7. Enable Authentication methods you need
# 8. Set up Firestore Database
# 9. Configure Storage rules
# 10. Deploy Cloud Functions if needed

