{
  "name": "wesplit",
  "version": "1.1.2",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=8192' expo start --host lan --clear",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "clear": "NODE_OPTIONS='--max-old-space-size=8192' npx expo start --clear --host lan",
    "prebuild": "npx expo prebuild --clean",
    "clean-cache": "npx expo start --clear && rm -rf node_modules/.cache .expo",
    "increment-build": "node scripts/increment-build.js",
    "update-version": "node scripts/update-version.js",
    "build:ipa:mass": "node tools/scripts/build-shareable-ipa.js mass-distribution",
    "build:ipa:testflight": "node tools/scripts/build-shareable-ipa.js testflight",
    "build:ipa:internal": "node tools/scripts/build-shareable-ipa.js internal-testing",
    "build:ipa:preview": "node tools/scripts/build-shareable-ipa.js preview",
    "build:aab:local": "bash scripts/build-aab-production-local.sh",
    "build:aab:simple": "npm run increment-build && cd android && ./gradlew bundleRelease",
    "build:ipa:local": "bash scripts/build-ipa-production-local.sh",
    "build:both:local": "bash scripts/build-both-production-local.sh",
    "eas:build:android": "eas build --platform android --profile production --clear-cache",
    "eas:build:ios": "eas build --platform ios --profile production --clear-cache",
    "eas:build:both": "eas build --platform all --profile production --clear-cache",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config config/testing/jest.config.js",
    "test:coverage": "jest --config config/testing/jest.config.js --coverage",
    "test:links": "npx ts-node scripts/test-invitation-links.ts",
    "test:links:verbose": "VERBOSE=true npx ts-node scripts/test-invitation-links.ts",
    "test:deeplinks": "npx ts-node scripts/test-deeplink-config.ts",
    "test:flow": "npx ts-node scripts/test-invitation-flow.ts",
    "test:formats": "npx ts-node scripts/test-link-formats.ts",
    "test:invitation": "npm run test:links && npm run test:deeplinks && npm run test:flow && npm run test:formats",
    "validate:rewards": "npx ts-node tools/scripts/validate-reward-configs.ts",
    "migrate:badges": "node scripts/migrateBadgesSimple.js",
    "migrate:badges:cli": "./scripts/migrateBadgesFirebaseCLI.sh",
    "migrate:badges:admin": "node scripts/migrateBadgesAdminSDK.js",
    "verify:badge-images": "node scripts/verifyBadgeImageUrls.js",
    "create:spend-api-key": "npx ts-node scripts/create-spend-api-key.ts",
    "test:spend": "npx ts-node scripts/test-spend-integration.ts",
    "test:spend:emulator": "USE_EMULATOR=true npx ts-node scripts/test-spend-integration.ts",
    "test:spend:live": "npx ts-node scripts/test-spend-integration.ts --live",
    "test:spend:full": "npx ts-node scripts/test-spend-full-flow.ts",
    "test:spend:full:live": "npx ts-node scripts/test-spend-full-flow.ts --live",
    "test:spend:endpoints": "node tools/test-spend-endpoints.js",
    "test:spend:endpoints:create": "node tools/test-spend-endpoints.js create",
    "test:spend:endpoints:invite": "node tools/test-spend-endpoints.js invite",
    "test:spend:endpoints:pay": "node tools/test-spend-endpoints.js pay",
    "test:spend:endpoints:status": "node tools/test-spend-endpoints.js status",
    "test:spend:endpoints:search": "node tools/test-spend-endpoints.js search",
    "test:spend:endpoints:flow": "node tools/test-spend-endpoints.js flow",
    "test:transactions": "node scripts/test-transaction-duplicates.js",
    "test:transactions:emulator": "USE_EMULATOR=true node scripts/test-transaction-duplicates.js",
    "test:frontend": "node scripts/test-frontend-deduplication.js",
    "test:spend:transactions": "USE_EMULATOR=true node scripts/test-spend-transactions.js",
    "test:build": "bash scripts/test-local-build.sh",
    "validate:production": "node scripts/validate-production-build.js",
    "security:audit": "npm audit --audit-level high",
    "test:referral:security": "node scripts/test-referral-security-fixes.js",
    "security:audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level moderate && echo 'âœ… No critical security issues found'",
    "security:audit:prod": "npm audit --audit-level high --omit=dev",
    "security:audit:dev": "npm audit --audit-level high --include=dev"
  },
