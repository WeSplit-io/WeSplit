# WeSplit Backend Environment Variables Example
# Copy this file to services/backend/.env and fill in your actual values
# 
# SECURITY WARNING:
# - Never commit .env file to version control
# - Never use EXPO_PUBLIC_ prefix for secret keys
# - Store secret keys in secure secret management (AWS Secrets Manager, etc.)

# Backend Configuration
PORT=4000
NODE_ENV=development

# Company Wallet Configuration (REQUIRED for transaction signing)
# SECURITY: This is server-side only - NEVER use EXPO_PUBLIC_ prefix
# The secret key must be in JSON array format: [123,45,67,89,...]
COMPANY_WALLET_ADDRESS=YOUR_COMPANY_WALLET_ADDRESS_HERE
COMPANY_WALLET_SECRET_KEY=[123,78,90,...,56,78,90]

# Solana Network Configuration
DEV_NETWORK=devnet
# For production, use: DEV_NETWORK=mainnet
# Or: EXPO_PUBLIC_DEV_NETWORK=mainnet

# Helius RPC Configuration (Optional - for better performance)
HELIUS_RPC_URL=
HELIUS_API_KEY=
# Or use: EXPO_PUBLIC_HELIUS_API_KEY (for client-side access)

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECURE_32_CHARACTER_JWT_SECRET_KEY_HERE
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# MoonPay Configuration (for fiat onramps)
MOONPAY_API_KEY=YOUR_MOONPAY_API_KEY_HERE
MOONPAY_SECRET_KEY=YOUR_MOONPAY_SECRET_KEY_HERE
MOONPAY_WEBHOOK_SECRET=YOUR_MOONPAY_WEBHOOK_SECRET_HERE

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=YOUR_EMAIL@gmail.com
EMAIL_PASS=YOUR_APP_SPECIFIC_PASSWORD
EMAIL_FROM=noreply@wesplit.com

# Firebase Admin SDK (for server-side operations)
FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_PRIVATE_KEY=YOUR_FIREBASE_PRIVATE_KEY
FIREBASE_CLIENT_EMAIL=YOUR_FIREBASE_CLIENT_EMAIL

# Security Configuration
CORS_ORIGIN=https://your-app-domain.com
ALLOWED_ORIGINS=https://your-app-domain.com,https://api.your-app-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_STRICT_MAX=10

# Monitoring & Logging
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
LOG_LEVEL=info
LOG_FORMAT=json

# Push Notifications
FIREBASE_SERVER_KEY=YOUR_FIREBASE_SERVER_KEY
PUSH_NOTIFICATIONS_ENABLED=true

