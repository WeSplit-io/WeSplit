rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own avatars
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Allow anyone to read avatars (for displaying to other users)
      allow write: if request.auth != null && request.auth.uid == userId; // Only allow users to write their own avatars
    }
    
    // Allow read access to public assets (existing visuals)
    match /visuals-app/{allPaths=**} {
      allow read: if true;
    }
    
    match /wallet-logos/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow read access to badge images (including community badges in communaut√© folder)
    match /badges/{allPaths=**} {
      allow read: if true;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
